{
    "name": "mern-stack-food-shopping",
    "version": "1.0.0",
    "description": "Food Shop",
    "main": "server.js",
    "engines": {
        "node": "16.17.0"
    },
    "scripts": {
        "start:dev": "node server.js",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client",
        "server": "json-server --watch db.json",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\" ",
        "start": "concurrently \"npm run server\" \"npm run start:dev\" "
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sergKenne/mern-stack-food-shopping.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/sergKenne/mern-stack-food-shopping/issues"
    },
    "homepage": "https://github.com/sergKenne/mern-stack-food-shopping#readme",
    "dependencies": {
        "concurrently": "^7.5.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-favicon": "^2.0.1",
        "json-server": "^0.17.1",
        "path": "^0.12.7"
    }
}
